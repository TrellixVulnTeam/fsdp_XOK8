<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
  </div>
  <div class="container-fluid ">
		<form align="left" method="get" action="/courses/addCourses">
		<button type="submit" class="btn btn-primary mt-5 mb-2">Add Courses</button>
	</form>
	{{#if courses}}
		<h3 class="text-dark">Courses Listed</h3>
		{{#each courses}}
		<div class="row">
  			<div class="col-sm-6">
				<div class="card border-dark mb-2">
				<div class="card-header">
                    <h1 class="card-title">{{title}}</h>
                </div>
					<div class="card-body">
						<div class="col">
							<h5>Description of the Course</h5>
							<p class="card-text">{{Description}}</p>
						</div>
						<div class="col">
							<h5>Price</h5>
							<p class="card-text">${{price}}</p>
						</div>
						<div class="col">
							<h5>Difficulty</h5>
                    		<p class="card-text">{{difficulty}}</p>
						</div>
					</div>
					<div class="col">
						<p>
							<a href="/courses/editCourses/{{id}}" class="card-link mb-2">
								<i class="fas fa-pencil-alt"></i>
								Edit
							</a>
						</p>
						<p>
							<a href="/courses/deleteCourses/{{id}}" class="card-link" data-toggle="confirmation" data-title="Confirm delete?">
								<i class="far fa-trash-alt"></i>
								Delete
							</a>
						</p>
					</div>
					</div>
				</div>
			</div>
		</div>
	{{/each}}
</div>
{{else}}
<h3>No Courses listed</h3>
{{/if}}
</main>

<script>
	$('[data-toggle=confirmation]').confirmation({
		rootSelector: '[data-toggle=confirmation]',
	});
</script>