<div class="container-fluid ">
	{{#if courses}}
		<h1 class="text-primary">Courses Listed</h1>
		{{#each courses}}
		<div class="row">
  			<div class="col-sm-6">
				<div class="card border-primary mb-2 w-50 mx-auto">
				<div class="card-header">
                    <h1 class="card-title">{{title}}</h>
                </div>
					<div class="card-body">
						<h5>Description of the Course</h5>
						<p class="card-text">{{Description}}</p>
						<h5>Price</h5>
						<p class="card-text">${{price}}</p>
						<h5>Difficulty</h5>
                    	<p class="card-text">{{difficulty}}</p>
					</div>
					<div class="col-sm-6 col-md-6 col-lg-2">
						<p>
							<a href="/courses/editCourses/{{id}}" class="card-link mb-2">
								<i class="fas fa-pencil-alt"></i>
								Edit
							</a>
						</p>
						<p>
							<a href="/courses/deleteCourses/{{id}}" class="card-link" data-toggle="confirmation" data-title="Confirm delete?">
								<i class="far fa-trash-alt"></i>
								Delete
							</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	{{/each}}
</div>
{{else}}
<h3>No Courses listed</h3>
{{/if}}

<script>
	$('[data-toggle=confirmation]').confirmation({
		rootSelector: '[data-toggle=confirmation]',
	});
</script>