<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
  </div>
  <div class="container">
	<div class="card card-body">
		<h3>Edit Course Details</h3>
		<form action="" method="post">
			<div class="form-group">
				{{!-- Practical 5 Exercise 2: Add a title input text here named 'title'--}}
				<label class="font-italic" for="title">Title</label>
				<input class="form-control" id="title" name="title" value="{{course.title}}"
					onblur="initialiseTitle()" />
			</div>
			<div class="form-group mb-4">
				<label class="font-italic" for="description">Description</label>
				<textarea class="form-control" id="description" name="description" rows="7"
					maxlength="2000">{{course.Description}}</textarea>
			</div>
            <div class="form group mb-4">
                <label class="font-italic" for="price">Price</label>
                <input class="form-control" id="price" name="price" value="{{course.price}}"/>
            </div>
			<div class="col-12 col-sm-12 col-md-6 col-lg-6">
				<label class="font-italic">Difficulty</label>
				<br>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" id="basic" value="basic" name="difficulty"
						{{radioCheck course.difficulty "basic" }}>
					<label class="form-check-label" for="basic">Basic</label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" id="intermediate" value="intermediate" name="difficulty"
						{{radioCheck course.difficulty "intermediate" }}>
					<label class="form-check-label" for="intermediate">Intermediate</label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" id="advanced" value="advanced" name="difficulty"
						{{radioCheck course.difficulty "advanced" }}>
					<label class="form-check-label" for="advanced">Advanced</label>
				</div>
			</div>
			<br>
			<button id="btnSubmit" type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>
</main>

