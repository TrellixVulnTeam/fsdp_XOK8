<style type="type/css">
    .search-button{
      width: 25%; 
      height: 25%; 
    }
    div.container {
		width: 80%;
		margin: auto;
		margin-top: 30px;
	}
</style>

<div class="container">
	{{#if classes}}
	<div class="card card-body">
		<h3 class="text-primary">Classes</h3>
		{{#each classes}}
		<div class="card border-primary mb-2 w-100 mx-auto">
			<div class="card-body">
				<div class="row">
					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="instructor_name">Instructor Name</p>
						<p class="text-info">{{instructor_name}}</p>
					</div>

					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="course_name">Name</p>
						<p class="text-info">{{course_name}}</p>
					</div>

					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="course_difficulty">Difficulty</p>
						<p class="text-info">{{course_difficulty}}</p>
					</div>
					
					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="course_price">Course Price</p>
						<p class="text-info">{{course_price}}</p>
					</div>

					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="time">Time</p>
						<p class="text-info">{{time}}</p>
					</div>

					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="date">Date</p>
						<p class="text-info">{{formatDate dateClasses 'dd/mm/yyyy'}}</p>
					</div>
					
					<button type="button" class="btn btn-link"><a href="/booking/booknow">Book Now</a></button>

				</div>
			</div>
		{{/each}}
	</div>
	{{else}}
	<h3>No Classes</h3>
	{{/if}}
</div>

<script>
	$('[data-toggle=confirmation]').confirmation({
		rootSelector: '[data-toggle=confirmation]',
	});
</script>
