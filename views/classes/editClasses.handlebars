<style>
	.container{
		width: 40%;
		margin: auto;
	}
</style>
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
  </div>
<h4><u>Editing Class</u></h4>
<h6 class="word">Current Class: <br> {{classes.course_name}}</h6>
<div class="container">
	{{!-- <form action="/classes/editClasses/{{classes.id}}" method="post"> --}}
	<form action="" method="post">
		<div class="form-group">
			<div class="col">

				<div class="form-row md-form">
					<label for="course_id">Course ID</label>
 					<div class="col-75">
						<input class="form-control" name="course_id" value="{{classes.course_id}}"/>
					</div>
				</div>
				<br>
				
				<div class="form-row md-form">
					<label for="course_name">Name</label>
					<div class="col-75">
						<input class="form-control" name="course_name" value="{{classes.course_name}}"/>
					</div>
				</div>
				<br>
				
				<div class="form-row md-form">
					<label for="course_difficulty">Difficulty</label>
					<div class="col-75">
						<input class="form-control" name="course_difficulty" value="{{classes.course_difficulty}}"/>
					</div>
				</div>
				<br>

				<div class="form-row md-form">
					<label for="course_price">Course Price</label>
					<input type="text" class="form-control" name="course_price" value={{classes.course_price}}>
				</div> 
				<br>

				<div class="form-row md-form">
					<label for="time">Time</label>
					<div class="col-75">
						<input type="time" class="form-control" name="time" value={{classes.time}}>
					</div>
				</div>
				<br>

				<div class="row">
					<div class="col-25">
						<label for="date">Date</label>
					</div>
					<div class="col-75">
						<input type="date" class="form-control" name="date" value={{classes.date}}>
					</div>
				</div>
				<br>

				<div class="form-row md-form">
					<label for="class_no">Class</label>
					<div class="col-75">
						<input type="text" class="form-control" name="class_no" value={{classes.class_no}}>
					</div>
				</div>
				<br>

      			<div class="form-row md-form">
					<label for="pax">Pax</label>
					<div class="col-75">
						<input type="number" class="form-control" name="pax" value={{classes.pax}}>
					</div>
				</div>
				<br>
			</div>
		</div>
		<br>
		<button id="btnSubmit" type="submit" class="btn btn-primary">Update</button>
	</form>
</div>
</main>