<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
</div>
<div class="container">
	<form align="left" method="get" action="/classes/addClasses">
		<button type="submit" class="btn btn-primary mt-5 mb-2">Add Classes</button>
	</form>
	{{#if classes}}
	<div class="card card-body">
		<h3 class="text-dark">Classes</h3>
		{{#each classes}}
		<div class="card border-black mb-2">
			<div class="card-body">
				<div class="row">
					<div class="col">
						<p class="text-primary">Class ID</p>
						<p class="text-dark">{{id}}</p>
					</div>

					<div class="col">
						<p class="text-primary">Course ID</p>
						<p class="text-dark">{{course_id}}</p>
					</div>

					<div class="col">
						<p class="text-primary">User ID</p>
						<p class="text-dark">{{userId}}</p>
					</div>

					<div class="col">
						<p class="text-primary">Name</p>
						<p class="text-dark">{{course_name}}</p>
					</div>

					<div class="col">
						<p class="text-primary">Difficulty</p>
						<p class="text-dark">{{course_difficulty}}</p>
					</div>
					
					<div class="col">
						<p class="text-primary">Course Price</p>
						<p class="text-dark">{{course_price}}</p>
					</div>

					<div class="col">
						<p class="text-primary">Time</p>
						<p class="text-dark">{{time}}</p>
					</div>

					<div class="col">
						<p class="text-primary">Date</p>
						<p class="text-dark">{{date}}</p>
					</div>
												
					<div class="col">
						<p class="text-primary">Class</p>
						<p class="text-dark">{{class_no}}</p>
					</div>
						
					<div class="col">
						<p class="text-primary">Pax</p>
						<p class="text-dark">{{pax}}</p>
					</div>

					<div class="col">
						<p>
							<a href="/classes/editClasses/{{id}}" class="card-link mb-2">
								<i class="fas fa-pencil-alt"></i>
								Edit
							</a>
						</p>
						<p>
							<a href="/classes/deleteClasses/{{id}}" class="card-link" data-toggle="confirmation"
								data-title="Confirm delete?">
								<i class="far fa-trash-alt"></i>
								Delete
							</a>
						</p>
					</div>
				</div></div>
			</div>
		{{/each}}
	</div>
	{{else}}
	<h3>No Classes</h3>
	{{/if}}
</div>
</div>
</main>