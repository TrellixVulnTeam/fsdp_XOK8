<style type="type/css">
    .search-button{
      width: 25%; 
      height: 25%; 
    }
    div.container {
		width: 80%;
		margin: auto;
		margin-top: 30px;
	}
</style>

<!--search button -->
  <div class="input-group">
    <div class="form-outline">
      <input id="search-input" type="search" id="form1" class="form-control" width="48" height="48"/>
      <button id="search-button" type="button" class="btn btn-primary"><i class="fas fa-search"></i></button>
    </div>
  </div>

<div class="container">
	{{#if classes}}
	<div class="card card-body">
		<h3 class="text-primary">Classes</h3>
		{{#each classes}}
		<div class="card border-primary mb-2 w-100 mx-auto">
			<div class="card-body">
				<div class="row">
					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="course_id">Course ID</p>
						<p class="text-info">{{course_id}}</p>
					</div>

					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="user_id">User ID</p>
						<p class="text-info">{{userId}}</p>
					</div>

					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="instructor_id">Instructor ID</p>
						<p class="text-info">{{instructor_id}}</p>
					</div>
					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="name">Name</p>
						<p class="text-info">{{name}}</p>
					</div>

					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="difficulty">Difficulty</p>
						<p class="text-info">{{difficulty}}</p>
					</div>
						
					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="time">Time</p>
						<p class="text-info">{{time}}</p>
					</div>

					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="date">Date</p>
						<p class="text-info">{{formatDate dateClasses 'dd/mm/yyyy'}}</p>
					</div>
												
					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="class_no">Class</p>
						<p class="text-info">{{class_no}}</p>
					</div>
						
					<div class="col-sm-12 col-md-12 col-lg-2">
						<p class="pax">Pax</p>
						<p class="text-info">{{pax}}</p>
					</div>

					<div class="col-sm-12 col-md-12 col-lg-2">
						<p>
							<a href="/classes/editClasses/{{id}}" class="card-link mb-2">
								<i class="fas fa-pencil-alt"></i>
								Edit
							</a>
						</p>
						<p>
							<a href="/classes/deleteClasses/{{id}}" class="card-link" data-toggle="confirmation"
								data-title="Confirm delete?">
								<i class="far fa-trash-alt"></i>
								Delete
							</a>
						</p>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
	{{else}}
	<h3>No Classes</h3>
	{{/if}}
</div>

<script>
	$('[data-toggle=confirmation]').confirmation({
		rootSelector: '[data-toggle=confirmation]',
	});
</script>