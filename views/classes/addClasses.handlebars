<h4><u>New Class Creation</u></h4>

	<div class="container">
		<form method="POST" action="">
			<div class="row">
					<div class="col-25">
						<label for="date">Date</label>
					</div>
					<div class="col-75">
						<input type="date" class="form-control" name="date" value={{date}}>
					</div>
				</div>
				<br>
				
				<div class="row">
					<div class="col-25">
						<label for="pax">Pax</label>
					</div>
					<div class="col-75">
						<input type="number" id="pax" name="pax" min="0" max="5">
					</div>
				</div>
				<br>

				<div class="row">
					<div class="col-25">
						<label for="max_pax">Max Pax</label>
					</div>
					<div class="col-75">
						<input type="number" id="max_pax" name="max_pax" min="1" max="5">
					</div>
				</div>
				<br>
				<div class="submit">
				<button class="btn btn-primary waves-effect" type="submit">+ Create</button>
				</div>
		</form>
	</div>
</main>

