<style>
label {
  display: inline-block;
}

.input-group-append {
  cursor: pointer;
}

.container {
	width: 40%;
	margin: auto;
}

.col-75 {
  margin-top: 2px;
}

.submit {
	width: 20%; 
	margin: auto;
	text-align: center;
}
</style>

<!--admin create classes -->
<h4><u>New Class Creation</u></h4>

	<div class="container">
		<form method="POST" action="">
				<div class="row">
					<div class="col-25">
						<label for="course_id">Course ID</label>
					</div>
					<div class="col-75">
						<select id="course_id" name="course_id" required>
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						</select>
					</div>
				</div>
				<br>

				<div class="row">
					<div class="col-25">
						<label for="instructor_id">Instructor ID</label>
					</div>
					<div class="col-75">
						<input type="text" id="instructor_id" name="instructor_id" value=""><br>
					</div>
				</div>
				<br>

				<div class="row">
					<div class="col-25">
						<label for="name">Name</label>
					</div>
					<div class="col-75">
						<select id="name" name="name" required>
						<option value="Make your own Jacket">Make your own Jacket</option>
						<option value="Introduction to Sewing">Introduction to Sewing</option>
						<option value="Pattern Drafting">Pattern Drafting</option>
						</select>
					</div>
				</div>
				<br>

				<div class="row">
					<div class="col-25">
						<label for="difficulty">Difficulty</label>
					</div>
					<div class="col-75">
						<select id="difficulty" name="difficulty" required>
						<option value="Beginner">Beginner</option>
						<option value="Advanced">Advanced</option>
						<option value="Master">Master</option>
						</select>
					</div>
				</div>
				<br>

				<div class="row">
					<div class="col-25">
						<label for="time">Timing</label>
					</div>
					<div class="col-75">
						<select id="time" name="time" required>
						<option value="0930">0930AM</option>
						<option value="1130">1130AM</option>
						<option value="1230">1230PM</option>
						<option value="1400">1400PM</option>
						<option value="1500">1500PM</option>
						</select>
					</div>
				</div>
				<br>

				<div class="row">
					<div class="col-75">
						<label class="date">Date</label>
						<br>
						<input id="datepicker" width="200" name="dateClasses" readonly />
					</div>
				</div>
				<br>

				<div class="row">
					<div class="col-25">
						<label for="class_no">Class</label>
					</div>
					<div class="col-75">
						<select id="class_no" name="class_no" required>
						<option value="1">Class 1</option>
						<option value="2">Class 2</option>
						</select>
					</div>
				</div>
				<br>

				<div class="row">
					<div class="col-25">
						<label for="pax">Pax</label>
					</div>
					<div class="col-75">
						<input type="number" id="pax" name="pax" min="1" max="5">
					</div>
					</div>
				<br>
				<div class="submit">
				<button class="btn btn-primary waves-effect" type="submit">+ Create</button>
				</div>
		</form>
	</div>

<script>
	$(function(){
	$('#datepicker').datepicker({
		format: 'dd/mm/yyyy'
	});
	});
</script>