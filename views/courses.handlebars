<h1>Our Courses</h1>

	{{#if courses}}
		<h2 class="text-primary">Courses Listed</h2>
		{{#each courses}}
        <div class="card-body"></div>
            <div class="card border-primary mb-2 w-50 mx-auto">
                <div class="card-header">
                    <h1 class="card-title">{{title}}</h>
                </div>
                <div class="card-body">
                    <h3>Description of the Course</h3>
                    <p class="card-text">{{Description}}</p>
                    <h3>Price</h3>
                    <p class="card-text">${{price}}</p>
                </div>
                <div class="text-center">
                    <button type="button" class="button"><a href="/booking/listBooking">Book Now</a></button>
                </div>
            </div>
		{{/each}}
	</div>

</div>
{{else}}
<h3>No Courses listed</h3>
{{/if}}

<script>
	$('[data-toggle=confirmation]').confirmation({
		rootSelector: '[data-toggle=confirmation]',
	});
</script>