<script>
    $('[data-toggle=confirmation]').confirmation({
        rootSelector: '[data-toggle=confirmation]',
    });
</script>
{{#if courses}}
<h2 class="text-primary mt-4">Courses Listed</h2>

<div class="row">
    {{#each courses}}
    <div class="col-sm-4">
                <div class="card border-2 mb-2">
                    <div>
                        <a href="{{posterURL}}" data-title="{{title}}" data-toggle="lightbox">
                            <img src="{{posterURL}}" alt="Poster" class="img-thumbnail img-fluid"
                                onerror="this.src='/img/home_img.jpg'">
                        </a>
                    </div>
                    <div class="card-header col-12">
                        <h4 class="card-title text-start">{{title}}</h4>
                    </div>

                    <div class="card-body m-0">
                        <div class="row text-start">
                            <p class="text-info">{{difficulty}}</p>
                        </div>
                        <div class="row text-start">
                            <h5 class="text">{{description}}</h5>
                        </div>
                        <div class="row text-start">

                            <p class="text fw-bold">
                                ${{price}}
                            </p>
                        </div>
                    </div>
                    <div class="p-2"><a class="btn btn-primary" href="/booking/addBooking">Book Now</a></div>
                </div>
            </div>
    {{/each}}
</div>
{{else}}
<h3>No Courses listed</h3>
{{/if}}