<div class="container-fluid col-md-9 ms-sm-auto col-lg-10 px-md-4">
	<div class="h2 mt-3">Courses</div>
	<hr class="border border-secondary opacity-50">
	<div id="toolbar">
		<a id="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Courses</a>
	</div>
	<div class="table-responsive">
		<table id="table" data-show-refresh="true" data-auto-refresh="true" data-toggle="table" data-search="true"
			data-show-columns="true" data-toolbar="#toolbar" {{!-- data-show-custom-view="true"
			data-custom-view="customViewFormatter" data-show-custom-view-button="true" --}} data-url="/admin/courses/api/list">

			<thead>
				<tr>
					<th data-field="Course.title">id</th>
					<th data-field="CourseId">name</th>
					<th data-field="id">email</th>
					<th data-field="role">role</th>
					<th data-field="icons" data-formatter="generate_actions">actions</th>
				</tr>
			</thead>
		</table>
	</div>
</div>