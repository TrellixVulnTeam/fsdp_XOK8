<style>
	label {
		display: inline-block;
	}

	.input-group-append {
		cursor: pointer;
	}

	.container {
		width: 40%;
		margin: auto;
	}

	.col-75 {
		margin-top: 2px;
	}

	.submit {
		width: 20%;
		margin: auto;
		text-align: center;
	}
</style>

	<div class="container-fluid col-md-9 ms-sm-auto col-lg-10 px-md-4">
			<h4><u>New Class Creation</u></h4>
		<form method="POST" action="">

			<!-- THIS SUPPOSE TO BE A FOREIGN KEY FROM COURSE -->
			<div class="row">
				<div class="col-25">
					<label for="CourseId">Course ID</label>
				</div>
				{{!-- {{#if classes}} --}}
				<div class="col-75">
					<select id="CourseId" name="CourseId" required>
						{{#each courses}}
						<option value="{{id}}" name="CourseId">{{id}}</option>
						{{/each}}
					</select>
				</div>
				{{!-- {{/if}} --}}
			</div>

			<div class="row">
			<label for="start">Start date:</label>

			<input type="date" id="start" name="date"
				value="2022-07-26"
				min="2018-01-01" max="2022-12-31">
						</div>

			<div class="row">
				<div class="col-25">
					<label for="pax">Pax</label>
				</div>

				<div class="col-75">
					<input type="number" id="pax" name="pax" min="1" max="5">
				</div>
			</div>
			<div class="row">
				<div class="col-25">
					<label for="pax">Max Pax</label>
				</div>

				<div class="col-75">
					<input type="number" id="max_pax" name="max_pax" min="1" max="5">
				</div>
			</div>
			<br>
			<div class="submit">
				<button class="btn btn-primary waves-effect" type="submit">+ Create</button>
			</div>
		</form>
	</div>