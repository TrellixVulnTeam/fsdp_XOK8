{{#each messages}}
<div class="m-1 alert alert-success alert-dismissible" role="alert">
	<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	<h6><i class="fas fa-check-circle"></i> {{this}}</h6>
</div>
{{/each}}
{{#each errors}}
<div class="m-1 alert alert-danger" role="alert">
	<h6><i class="fas fa-exclamation-circle"></i> {{this}}</h6>
</div>
{{/each}}

{{#if flashMessenger }}
{{#each flashMessenger.alertsBeforeFlush}}
<div class="m-1 alert alert-{{this.type}} {{#if this.canBeDismissed}}alert-dismissible{{/if}}" role="alert">
    {{#if this.canBeDismissed}}
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    {{/if}}
    <h6>
        {{#if this.titleIcon}}
        <i class="{{this.titleIcon}}"></i>
        {{/if}}
        {{this.title}}
    </h6>
</div>
{{/each}}
{{/if}}
